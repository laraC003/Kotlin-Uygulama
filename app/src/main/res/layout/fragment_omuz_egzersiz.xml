<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Tam ekran VideoView -->
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Geri butonu sadece video oynarken görünür -->
    <ImageButton
        android:id="@+id/btnExitFullscreen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|start"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:visibility="gone" />

    <!-- Normal içerik -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <Button
                android:id="@+id/btnVideo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 1"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnVideo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 2"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnVideo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 3"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnVideo4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 4"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnVideo5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 5"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnVideo6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 6"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
