<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan">

    <EditText
        android:id="@+id/mailEditText2"
        android:layout_width="251dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:background="#ADCAC8"
        android:ems="10"
        android:hint="e-mail giriniz"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isimEditText" />

    <EditText
        android:id="@+id/tekrarParolaEditText"
        android:layout_width="251dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:background="#ACC9C7"
        android:ems="10"
        android:hint="tekrar parola giriniz"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yeniParolaEditText" />

    <EditText
        android:id="@+id/isimEditText"
        android:layout_width="251dp"
        android:layout_height="64dp"
        android:layout_marginTop="120dp"
        android:background="#ADCAC8"
        android:backgroundTint="#A9C6C4"
        android:ems="10"
        android:hint="kullan覺c覺 ad覺 giriniz"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/yeniParolaEditText"
        android:layout_width="251dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:background="#ADCAC8"
        android:backgroundTint="#ADCAC8"
        android:ems="10"
        android:hint="parola giriniz"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mailEditText2" />

    <EditText
        android:id="@+id/boyText"
        android:layout_width="102dp"
        android:layout_height="44dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="32dp"
        android:background="#ACC9C7"
        android:ems="10"
        android:hint="boy(cm)"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/kiloText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tekrarParolaEditText" />

    <EditText
        android:id="@+id/kiloText"
        android:layout_width="107dp"
        android:layout_height="43dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="80dp"
        android:background="#ACC9C7"
        android:ems="10"
        android:hint="kilo"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tekrarParolaEditText" />

    <Button
        android:id="@+id/button2"
        android:layout_width="123dp"
        android:layout_height="50dp"
        android:text="Kay覺t Ol"
        android:backgroundTint="#7EA49C"
        android:layout_marginTop="600dp"
        android:layout_marginStart="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>