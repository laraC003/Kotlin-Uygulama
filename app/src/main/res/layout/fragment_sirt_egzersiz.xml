<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sirtEgzersizFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Tam ekran VideoView -->
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Tam ekran modundan çıkma butonu -->
    <ImageButton
        android:id="@+id/btnExitFullscreen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|start"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="Tam ekrandan çık"
        android:visibility="gone" />

    <!-- Normal içerik -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- 13 adet video butonu -->
            <Button
                android:id="@+id/btnVideo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 1" />

            <Button
                android:id="@+id/btnVideo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 2" />

            <Button
                android:id="@+id/btnVideo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 3" />

            <Button
                android:id="@+id/btnVideo4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 4" />

            <Button
                android:id="@+id/btnVideo5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 5" />

            <Button
                android:id="@+id/btnVideo6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 6" />

            <Button
                android:id="@+id/btnVideo7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 7" />

            <Button
                android:id="@+id/btnVideo8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 8" />

            <Button
                android:id="@+id/btnVideo9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 9" />

            <Button
                android:id="@+id/btnVideo10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 10" />

            <Button
                android:id="@+id/btnVideo11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 11" />

            <Button
                android:id="@+id/btnVideo12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 12" />

            <Button
                android:id="@+id/btnVideo13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 13" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
